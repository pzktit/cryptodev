{
  "name": "CryptoDev",
  "image": "ghcr.io/pzktit/cryptodev:latest", // Specify a tag for the image
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python", // Updated to the latest setting key
        "editor.tabSize": 4,
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true
        }
      },
      "extensions": ["ms-vscode.cpptools", "esbenp.prettier-vscode"]
    }
  },
  "postCreateCommand": "pip install --no-cache-dir -r requirements.txt", // Added --no-cache-dir for efficiency
  "remoteUser": "vscode"
}
